      <h1>Admin Dashboard</h1>
      <!-- Manage Programs -->
      <section class="admin-panel">
        <h2>Workout/Yoga Programs</h2>
        <div class="buttonline">
          <a href="/program"
            ><button class="btn" id="btn">Add Program</button></a
          >
        </div>
        <div class="tbl">
          <table>
            <thead>
              <tr>
                <th>SN</th>
                <th>Title</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Plan</th>
                <th>Video</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if(programs.length === 0){ %>
              <tr>
                <td colspan="7">No Data Found</td>
              </tr>
              <% } else{ let count=1; programs.forEach(program => { %>
              <tr>
                <td><%= count %></td>
                <td style="text-align: left"><%= program.title %></td>
                <td><%= program.slogan %></td>
                <td><%= program.duration %> min</td>
                <td><%= program.plan %></td>
                <td>
                  <a href="<%= program.link %>" target="_blank">Watch</a>
                </td>
                <td>
                  <a href="/edit/<%= program.id %>"
                    ><i class="fa-regular fa-pen-to-square"></i
                  ></a>
                </td>
                <td>
                  <form action="/delete/<%= program.id %>" method="post">
                    <button type="submit" class="del">
                      <i class="fa-regular fa-trash-can"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <% count++ }) } %>
            </tbody>
          </table>
        </div>
      </section>

      <!-- Manage Users -->
      <section class="admin-panel">
        <h2>List of Users</h2>
        <div class="tbl">
          <table>
            <thead>
              <tr>
                <th>SN</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Registered On</th>
              </tr>
            </thead>
            <tbody>
              <% if(users.length === 0){ %>
              <tr>
                <td colspan="5">No Data Found</td>
              </tr>
              <% } else{ let sn=1; users.forEach(user => { %>
              <tr>
                <td><%= sn %></td>
                <td style="width: 30%; text-align: left"><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td
                  class="local-date"
                  data-date="<%= user.createdAt.toISOString() %>"
                >
                  <%= user.createdAt.toISOString().split('T')[0] %>
                </td>
              </tr>
              <% sn++ }) } %>
            </tbody>
          </table>
        </div>
      </section>

