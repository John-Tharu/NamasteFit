      <h1>Admin Dashboard</h1>
      <!-- Manage Programs -->
      <section class="admin-panel">
        <h2>Workout/Yoga Programs</h2>
        <a href="/program"><button class="btn" id="btn">Add Program</button></a>
        <div class="tbl">
          <table>
            <thead>
              <tr>
                <th>SN</th>
                <th>Title</th>
                <th>Duration</th>
                <th>Plan</th>
                <th>Video</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% let count=1; programs.forEach(program => { %>
              <tr>
                <td><%= count %></td>
                <td style="width: 60%; text-align: left">
                  <%= program.title %>
                </td>
                <td><%= program.duration %> min</td>
                <td><%= program.plan %></td>
                <td>
                  <a href="<%= program.link %>" target="_blank">Watch</a>
                </td>
                <td>
                  <a href="/admin/programs/edit/<%= program._id %>"
                    ><i class="fa-regular fa-pen-to-square"></i
                  ></a>
                </td>
                <td>
                  <a href=""><i class="fa-regular fa-trash-can"></i></a>
                </td>
              </tr>
              <% count++ }) %>
            </tbody>
          </table>
        </div>
      </section>

      <!-- Manage Users -->
      <section class="admin-panel">
        <h2>List of Users</h2>
        <div class="tbl">
          <table>
            <thead>
              <tr>
                <th>SN</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Registered On</th>
              </tr>
            </thead>
            <tbody>
              <% let sn=1; users.forEach(user => { %>
              <tr>
                <td><%= sn %></td>
                <td style="width: 30%; text-align: left"><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td><%= (user.createdAt) %></td>
              </tr>
              <% sn++ }) %>
            </tbody>
          </table>
        </div>
      </section>

      <!-- Manage Subscribers -->
      <section class="admin-panel">
        <h2>Subscribers</h2>
        <div class="tbl">
          <table>
            <thead>
              <tr>
                <th>SN</th>
                <th>Name</th>
                <th>Email</th>
                <th>Plan</th>
                <th>Joined On</th>
              </tr>
            </thead>
            <tbody>
              <% subscribers.forEach(user => { %>
              <tr>
                <td>1</td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.plan %></td>
                <td><%= user.joinDate %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>

      <!-- Payment History -->
      <section class="admin-panel">
        <h2>Payment History</h2>
        <div class="tbl">
          <table>
            <thead>
              <tr>
                <th>SN</th>
                <th>User</th>
                <th>Plan</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Transaction ID</th>
              </tr>
            </thead>
            <tbody>
              <% payments.forEach(payment => { %>
              <tr>
                <td>1</td>
                <td><%= payment.user %></td>
                <td><%= payment.plan %></td>
                <td>$<%= payment.amount %></td>
                <td><%= payment.date %></td>
                <td><%= payment.txnId %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
