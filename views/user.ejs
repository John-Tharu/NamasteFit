<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard â€“ NamasteFit</title>
    <link rel="stylesheet" href="/style.css" />
    <script
      src="https://kit.fontawesome.com/bb7a749298.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('partials/nav') %>

    <main class="admin-section">
      <h1>Welcome, <%= name %></h1>

      <!-- Programs -->
      <section class="admin-panel">
        <h2>Available Programs</h2>
        <div class="program-list">
          <% programs.forEach(p => { %>
          <div class="program-card">
            <h3><%= p.title %></h3>
            <p><%= p.slogan %></p>
            <p><strong>Duration:</strong> <%= p.duration %> mins</p>
            <a href="<%= p.link %>" class="btn small" target="_blank">Watch</a>
          </div>
          <% }) %>
        </div>
      </section>

      <!-- Subscription History -->
      <section class="admin-panel">
        <h2>Subscription History</h2>
        <div class="tbl">
          <table>
            <thead>
              <tr>
                <th>SN</th>
                <th>Plan</th>
                <th>Package</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Expiry</th>
                <th>Remaining</th>
                <th>Status</th>
                <th>Entry Card</th>
              </tr>
            </thead>
            <tbody>
              <% let count = 1; subscriptions.forEach(sub => { const created =
              new Date(sub.createdAt); const today = new Date(); const addMonths
              = { monthly: 1, semiannual: 6, annual: 12 }; const expiry = new
              Date(created.setMonth(created.getMonth() + (addMonths[sub.package]
              || 0))); expiry.setHours(0,0,0,0); today.setHours(0,0,0,0); const
              remaining = Math.max(Math.ceil((expiry - today) / (1000 * 60 * 60
              * 24)), 0); const status = remaining > 0 ? "Active" : "Disable";
              %>
              <tr>
                <td><%= count++ %></td>
                <td><%= sub.plan %></td>
                <td><%= sub.package %></td>
                <td style="text-align: right">NPR. <%= sub.amount %></td>
                <td><%= sub.createdAt.toISOString().split('T')[0] %></td>
                <td><%= expiry.toISOString().split('T')[0] %></td>
                <td><%= remaining %> Days</td>
                <td><%= status %></td>
                <td>
                  <a
                    href="/card?plan=<%= sub.plan %>&pkg=<%= sub.package %>&purchase=<%= sub.createdAt.toISOString().split('T')[0] %>&expire=<%= expiry.toISOString().split('T')[0] %>"
                    ><i class="fa-regular fa-address-card"></i
                  ></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
