  <body>
    <%- include('partials/nav') %>

    <main class="admin-section">
      <h1>Welcome, <%= name %></h1>

      <!-- Available Programs -->
      <section class="admin-panel">
        <h2>Available Programs</h2>
        <div class="program-list">
          <% programs.forEach(program => { %>
          <div class="program-card">
            <h3><%= program.title %></h3>
            <p><%= program.description %></p>
            <p><strong>Duration:</strong> <%= program.duration %> mins</p>
            <p><strong>Price:</strong> $<%= program.price %></p>
            <a href="<%= program.videoUrl %>" class="btn small" target="_blank"
              >Watch</a
            >
          </div>
          <% }) %>
        </div>
      </section>

      <!-- Subscription History -->
      <section class="admin-panel">
        <h2>Subscription History</h2>
        <div class="tbl">
          <table>
            <thead>
              <tr>
                <th>SN</th>
                <th>Plan</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Status</th>
                <th>Remaning Days</th>
                <th>Entry Card</th>
              </tr>
            </thead>
            <tbody>
              <% let count = 1; subscriptions.forEach(sub => { %>
              <tr>
                <td><%= count %></td>
                <td style="width: 40%; text-align: left"><%= sub.plan %></td>
                <td>$<%= sub.amount %></td>
                <td
                  class="local-date"
                  data-date="<%= sub.createdAt.toISOString() %>"
                >
                  <%= sub.createdAt.toISOString().split('T')[0] %>
                </td>
                <td
                  class="status"
                  data-status="<%= sub.createdAt.toISOString() %>"
                >
                  <%= sub.status %>
                </td>
                <td
                  class="expiry"
                  data-expiry="<%= sub.createdAt.toISOString() %>"
                >
                  <%= sub.createdAt.toISOString().split('T')[0] %>
                </td>
                <td>
                  <a href="/card"><i class="fa-regular fa-address-card"></i></a>
                </td>
              </tr>
              <% count++ }) %>
            </tbody>
          </table>
        </div>
      </section>
    </main>

